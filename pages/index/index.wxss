/* pages/index/index.wxss */
.container {
  padding-bottom: 120rpx;
}

/* 头部统计 */
.header-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.stat-item {
  text-align: center;
  color: #fff;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-number.completed {
  color: #10b981;
}

.stat-number.pending {
  color: #f59e0b;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  transition: all 0.3s;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 清单容器 */
.checklist-container {
  padding: 0 30rpx;
}

/* 清单项 */
.checklist-item {
  display: flex;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.checklist-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
}

.checklist-item.completed {
  opacity: 0.7;
  background: #f9fafb;
}

.checklist-item.completed::before {
  background: #10b981;
}

.checklist-item.completed .item-title {
  text-decoration: line-through;
  color: #9ca3af;
}

.item-content {
  flex: 1;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  flex: 1;
  margin-right: 20rpx;
}

.priority-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  white-space: nowrap;
}

.priority-badge.priority-0 {
  background: #e5e7eb;
  color: #6b7280;
}

.priority-badge.priority-1 {
  background: #dbeafe;
  color: #2563eb;
}

.priority-badge.priority-2 {
  background: #fef3c7;
  color: #d97706;
}

.item-description {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f3f4f6;
}

.item-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.item-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.btn-complete {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-completed {
  background: #10b981;
  color: #fff;
}

.btn-delete {
  background: #fee2e2;
  color: #ef4444;
}

/* 状态复选框 */
.status-checkbox {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid #d1d5db;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  flex-shrink: 0;
  transition: all 0.3s;
  background: #fff;
}

.status-checkbox.checked {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: transparent;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #9ca3af;
}

/* 浮动添加按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.fab:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.fab-icon {
  font-size: 64rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
}

