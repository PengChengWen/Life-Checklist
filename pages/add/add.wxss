/* pages/add/add.wxss */
.container {
  padding: 30rpx;
  padding-bottom: 120rpx;
}

.form-container {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.form-section {
  margin-bottom: 50rpx;
}

.form-section:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.label-required {
  color: #ef4444;
  margin-left: 8rpx;
  font-size: 28rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1f2937;
  background: #f9fafb;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #6366f1;
  background: #fff;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1f2937;
  background: #f9fafb;
  line-height: 1.6;
  transition: all 0.3s;
}

.form-textarea:focus {
  border-color: #6366f1;
  background: #fff;
}

.input-hint {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 12rpx;
}

/* 优先级选择器 */
.priority-selector {
  display: flex;
  gap: 20rpx;
}

.priority-option {
  flex: 1;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  background: #f9fafb;
  transition: all 0.3s;
  position: relative;
}

.priority-option.active {
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.priority-label {
  display: block;
}

.priority-dot {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

/* 操作按钮 */
.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 60rpx;
}

.btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s;
}

.btn::after {
  border: none;
}

.btn-reset {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-reset:active {
  background: #e5e7eb;
}

.btn-submit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.btn-submit:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

/* 提示信息 */
.tips-section {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #92400e;
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-content text {
  font-size: 26rpx;
  color: #78350f;
  line-height: 1.6;
}

